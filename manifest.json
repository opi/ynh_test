{
    "name": "YunoHost Test app",
    "id": "ynhtest",
    "description": {
        "en": "Test package for YunoHost application.",
        "fr": "Test de package dâ€™application pour YunoHost."
    },
    "url": "https://example.com",
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com",
        "url": "http://example.com"
    },
    "multi_instance": "false",
    "services": [
        "nginx",
        "php5-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for ynhtest",
                    "fr": "Choisissez un nom de domaine pour ynhtest"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ynhtest",
                    "fr": "Choisissez un chemin pour ynhtest"
                },
                "example": "/test",
                "default": "/test"
            },
            {
                "name": "testbool",
                "type": "boolean",
                "ask": {
                    "en": "Do you want to check this boolean"
                },
                "default": "False"
            }
        ]
    }
}
